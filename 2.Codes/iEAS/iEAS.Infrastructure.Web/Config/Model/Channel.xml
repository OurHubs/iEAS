      <Params>
        <Param Name="SN" Source="ROUTE" Value="ChannelSN" Queryable="false"></Param>
      </Params>
    </DataSource>
    <DataSource Code="Channel.CurrentMenu">
      <Sql>SELECT * FROM CHANNEL WHERE SN = @SN</Sql>
      <OrderBy>SN ASC</OrderBy>
      <Params>
        <Param Name="SN" Source="ROUTE" Value="ChannelSN" Queryable="false"></Param>
      </Params>
    </DataSource>
